#!/bin/bash

export bindir=$( cd "${BASH_SOURCE[0]%/*}" && pwd )

. "$bindir"/_test-helpers.sh
test_setup $1

name="external-issuer"
create_cluster "$name" "default"
check_cluster "$name"
"$bindir"/kind-load "$name"
run_test "$test_directory/install_test.go" --external-issuer=true
run_test "$test_directory/externalissuer/external_issuer_test.go" --external-issuer=true
delete_cluster "$name"
