#!/bin/bash

export bindir=$( cd "${BASH_SOURCE[0]%/*}" && pwd )

. "$bindir"/_test-helpers.sh
test_setup $1

name="uninstall"
create_cluster "$name" "default"
check_cluster "$name"
"$bindir"/kind-load "$name"
run_test "$test_directory/uninstall/uninstall_test.go" --uninstall=true
delete_cluster "$name"
