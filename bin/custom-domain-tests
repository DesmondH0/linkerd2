#!/bin/bash

bindir=$( cd "${BASH_SOURCE[0]%/*}" && pwd )

# shellcheck source=_test-helpers.sh
. "$bindir"/_test-helpers.sh
test_setup "$@"

name="custom-domain"
create_cluster "$name" "default"
check_cluster "$name"
"$bindir"/kind-load "$name"
run_test "$test_directory/install_test.go" --cluster-domain='custom.domain'
delete_cluster "$name"
